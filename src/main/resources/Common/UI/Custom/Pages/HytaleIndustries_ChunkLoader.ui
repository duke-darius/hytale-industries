$C = "../Common.ui";

Group {
  Anchor: (Width: 320, Height: 210);

  $C.@Container {
    Anchor: (Full: 0);

    #Title {
      Group {
        $C.@Title {
          @Text = "Chunk Loader";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Left: 12, Right: 12, Top: 12, Bottom: 12);

      $C.@Title #ModeText {
        @Alignment = Start;
        @Text = "Mode: Background";
      }

      Group { Anchor: (Height: 12, Left: 0, Top: 0); }

      $C.@TextButton #BackgroundButton {
        @Text = "Background";
        Anchor: (Left: 0, Right: 0);
      }

      Group { Anchor: (Height: 8, Left: 0, Top: 0); }

      $C.@TextButton #ActiveButton {
        @Text = "Active";
        Anchor: (Left: 0, Right: 0);
      }
    }
  }
}
