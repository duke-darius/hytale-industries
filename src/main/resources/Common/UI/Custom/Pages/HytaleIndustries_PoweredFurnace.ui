$C = "../Common.ui";

Group {
  Anchor: (Width: 460, Height: 240);

  $C.@Container {
    Anchor: (Full: 0);

    #Title {
      Group {
        $C.@Title {
          @Text = "Powered Furnace";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Left: 12, Right: 12, Top: 12, Bottom: 12);

      $C.@Title #HeText {
        @Alignment = Start;
        @Text = "HE: 0 / 10000";
      }

      Group {
        LayoutMode: Left;
        Anchor: (Top: 30, Height: 40);


        ItemSlotButton #InputButton {
          Anchor: (Width: 72, Height: 72, Left: 20);
          LayoutMode: Full;

          ItemSlot #InputSlot {
            Anchor: (Full: 0);
            ShowQualityBackground: false;
          }

        }

        ProgressBar #ProgressBar {
          Anchor: (Left: 10, Width: 220, Height: 16);
          Background: #000000;
          Bar: (Color: #FF0000);
        }

        ItemSlotButton #OutputButton {
          Anchor: (Width: 72, Height: 72, Left: 20);
          LayoutMode: Full;

          ItemSlot #OutputSlot {
            Anchor: (Width: 72, Height: 72, Left: 20);
            ShowQualityBackground: false;
          }

        }


      }

    }
  }
}
