$C = "../Common.ui";

Group {
  Anchor: (Width: 360, Height: 200);

  $C.@Container {
    Anchor: (Full: 0);

    #Title {
      Group {
        $C.@Title #TitleText {
          @Text = "Basic Item Cache";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Left: 12, Right: 12, Top: 12, Bottom: 12);

      // Text summary of total cached items
      $C.@Title #Contents {
        @Alignment = Start;
        @Text = "Empty";
      }

      // Single overstack slot
      Group {
        LayoutMode: Left;
        Anchor: (Top: 12, Height: 80);

        // Input slot
        ItemSlotButton #InputButton {
          Anchor: (Width: 72, Height: 72, Left: 0);
          LayoutMode: Full;

          ItemSlot #InputSlot {
            Anchor: (Full: 0);
            ShowQualityBackground: false;
          }

          Group {
            LayoutMode: Right;
            Anchor: (Width: 72, Left: 0, Top: 54);

            Label #InputQty {
              Style: (HorizontalAlignment: End);
              Text: "";
            }
          }
        }
      }
    }
  }
}
